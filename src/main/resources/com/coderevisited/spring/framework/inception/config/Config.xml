<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="address" class="com.coderevisited.spring.framework.inception.Address">
        <constructor-arg index="0" value="Chennai"/>
        <constructor-arg index="1" value="India"/>
        <constructor-arg index="2" value="500085"/>
    </bean>

    <bean id="person" class="com.coderevisited.spring.framework.inception.Person">
        <constructor-arg index="0" value="SureshSajja"/>
        <constructor-arg index="1" ref="address"/>
    </bean>

</beans>